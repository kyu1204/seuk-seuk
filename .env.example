# ===========================================
# SeukSeuk Environment Variables Example
# ===========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
# Your Supabase project URL (from Supabase Dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase public/anon key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase publishable key (for client-side auth)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here

# Supabase Service Role Key (for credit operations - KEEP SECRET!)
# Required for credit system to bypass RLS policies
# Get from: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -------------------------------------------
# Paddle Payment Configuration
# -------------------------------------------
# Paddle client token for frontend SDK
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your_paddle_client_token_here

# Paddle environment: "sandbox" or "production"
NEXT_PUBLIC_PADDLE_ENV=sandbox

# Paddle API key for backend operations
PADDLE_API_KEY=your_paddle_api_key_here

# Paddle webhook secret for signature verification
PADDLE_NOTIFICATION_WEBHOOK_SECRET=your_webhook_secret_here

# Paddle Credit Product Price ID
# Required for credit purchase feature
# Create a one-time product in Paddle Dashboard and use its Price ID
PADDLE_CREDIT_PRICE_ID=pri_01xxxxxxxxxxxxxxxxxxxxx

# -------------------------------------------
# Site Configuration
# -------------------------------------------
# Your site's public URL (used for OAuth redirects, emails, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
